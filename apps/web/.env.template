# Application Configuration
NEXT_PUBLIC_APP_ENV=dev                      # Environment: dev or prod
NEXT_PUBLIC_CHAIN=celoSepolia                # Chain: hardhat, celoSepolia, celo, or celoAlfajores

# Blockchain Configuration
NEXT_PUBLIC_MASTER_FACTORY_ADDRESS=0x...    # Deployed MasterFactory contract address
NEXT_PUBLIC_CUSD_ADDRESS=0xdE9e4C3ce781b4bA68120d6261cbad65ce0aB00b  # cUSD on Sepolia testnet or Update after deploying MockCUSD
